{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../../packages/contract"
    } // 指向 contract 子项目的目录（包含 tsconfig.json）
  ]
}
