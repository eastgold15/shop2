{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2021",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    // ✅ 推荐：允许导入 TS 文件不带后缀
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "types": ["bun-types"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@repo/contract": ["../../packages/contract/src/index.ts"]
    },
    // ✅ 增量编译（关键！）
    "incremental": true,
    "tsBuildInfoFile": "./.cache/tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "out", // 如果有静态导出
    "dist"
  ],
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../../packages/contract"
    } // 指向 contract 子项目的目录（包含 tsconfig.json）
  ]
}
