{
  "name": "elysia",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "dev": " bun run --watch src/server.ts  -p 8012",
    "build": "bun build --minify-whitespace --minify-syntax --target=bun --outfile ./dist/index.js src/server.ts",
    "build:exe": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/server.ts",
    "start": "NODE_ENV=production bun ./dist/index.js -p 9012",
    "check": "npx ultracite check",
    "clean": "rimraf dist .turbo logs ",
    "fix": "npx ultracite fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.13",
    "@repo/contract": "workspace:*",
    "@t3-oss/env-core": "^0.13.10",
    "better-auth": "catalog:",
    "chalk": "^5.6.2",
    "drizzle-orm": "catalog:",
    "elysia": "catalog:",
    "elysia-http-problem-json": "^0.1.4",
    "env-var": "^7.5.0",
    "logixlysia": "catalog:",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "typebox": "^1.0.77"
  },
  "devDependencies": {
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.5"
  }
}