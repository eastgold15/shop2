{
  "name": "apps",
  "version": "1.0.0",
  "packageManager": "bun@1.3.5",
  "scripts": {
    "build:api": "bun --filter b2badmin-api build ",
    "start:api": "cd apps/api && bun  run start",
    "build:admin": "bun --filter b2badmin build ",
    "start:admin": "cd apps/b2badmin && bun run start",
    "build:web": "bun --filter next-web build ",
    "start:web": "cd apps/web && bun run start",
    "dev": "turbo run dev",
    "check": "npx ultracite check",
    "type-check": "turbo run type-check",
    "clean": "rm -rf dist .turbo logs bun.lock",
    "prepare": "husky",
    "docker:compose": "docker compose up -d",
    "pipelineGen": "bun run script/gen.ts",
    "postpipelineGen": "bun run fix"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/fs-extra": "^11.0.4",
    "@types/pg": "^8.16.0",
    "fs-extra": "^11.3.3",
    "husky": "^9.1.7",
    "lefthook": "^2.0.13",
    "lint-staged": "^16.2.7",
    "openapi-typescript": "^7.10.1",
    "ultracite": "7.0.8"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "@sinclair/typebox": "^0.34.46",
    "pg": "^8.16.3",
    "sonner": "^2.0.7",
    "ts-morph": "^27.0.2",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "^1.3.5",
      "elysia": "1.4.18",
      "drizzle-orm": "^1.0.0-beta.9-8d6992",
      "drizzle-kit": "^1.0.0-beta.9-8d6992",
      "drizzle-typebox": "^1.0.0-beta.9-8d6992",
      "typescript": "^5.9.3",
      "logixlysia": "^6.1.0",
      "@biomejs/biome": "2.3.11",
      "better-auth": "^1.4.10",
      "@types/pg": "^8.16.0",
      "next": "16.1.1",
      "@tanstack/react-query": "5.90.16",
      "zod": "^4.3.5",
      "tsx": "^4.21.0"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix",
      "bun x ultracite fix"
    ]
  }
}