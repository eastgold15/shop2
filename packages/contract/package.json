{
  "name": "@repo/contract",
  "version": "1.0.0",
  "description": "契约层 - 统一的 Zod Schema 和类型管理",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly --declarationDir dist",
    "db:dump": "mkdir -p backups && docker exec -i shop_postgres1 pg_dump -U shop -d shop --no-owner --no-acl --column-inserts --data-only > backups/shop_data.sql",
    "type-check": "tsc --noEmit",
    "db:backup": "./backup.bat",
    "clean": "rm -rf dist .turbo",
    "db:generate": "bun x drizzle-kit generate",
    "db:migrate": "bun x drizzle-kit migrate",
    "db:push": "bun x drizzle-kit push",
    "db:push:prod": "bun x drizzle-kit push --config drizzle.config.prod.ts",
    "db:studio": "bun x drizzle-kit studio",
    "seed": "bun run seed-complete.ts",
    "seed:reset": "bun run reset-database.ts"
  },
  "dependencies": {
    "drizzle-orm": "catalog:",
    "drizzle-typebox": "catalog:",
    "elysia": "catalog:"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/bun": "catalog:",
    "@types/pg": "catalog:",
    "drizzle-kit": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
