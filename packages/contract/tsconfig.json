{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
      "*": ["./*"]
    },
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    // 1. 启用复合项目模式（核心配置）
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
