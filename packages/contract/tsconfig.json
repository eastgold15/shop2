{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "*": [
        "./*"
      ]
    },
    // 2. 必须显式配置 outDir（composite 隐含约束）
    "outDir": "./dist",
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    // 1. 启用复合项目模式（核心配置）
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}